<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profile_achivements"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/profile_user_info"
    android:background="@drawable/profile_achivement_bg"
    android:scaleType="fitXY">

    <TextView
        android:id="@+id/txt_achivements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Achivements"
        android:textColor="@color/blue"
        android:textSize="20dp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_achivements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_achivements"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />


</RelativeLayout>