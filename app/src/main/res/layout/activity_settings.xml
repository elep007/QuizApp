<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Settings">

    <include layout="@layout/profile_backpressed" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_backpress"
        android:background="@drawable/setting_bg"
        android:orientation="vertical"
        android:padding="5dp"
        android:scaleType="fitXY">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:elevation="100dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/ll_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:drawableLeft="@drawable/sound_icon"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:text="Sound"
                    android:textColor="@color/blue"
                    android:textSize="20dp" />

                <ToggleButton
                    android:id="@+id/toggleButton1"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/toggle_selector"
                    android:checked="true"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:elevation="100dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:drawableLeft="@drawable/notification_icon"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:text="Notification"
                    android:textColor="@color/blue"
                    android:textSize="20dp" />


                <ToggleButton
                    android:id="@+id/toggleButton2"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/toggle_selector"
                    android:checked="true"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:elevation="100dp"
            android:visibility="gone"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:drawableLeft="@drawable/sound_effects_icon"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:text="Sound Effects"
                    android:textColor="@color/blue"
                    android:textSize="18dp" />

                <ToggleButton
                    android:id="@+id/toggleButton3"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/toggle_selector"
                    android:checked="false"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:elevation="100dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/ll_send_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/feedback_icon"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:text="Send Feedback"
                    android:textColor="@color/blue"
                    android:textSize="20dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:visibility="gone"
            android:elevation="100dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/ll_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/profile_image_icon"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:text="Profile"
                    android:textColor="@color/blue"
                    android:textSize="20dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:elevation="100dp"
            card_view:cardCornerRadius="10dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/ll_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/logout_icon"
                    android:drawablePadding="10dp"
                    android:gravity="left|center"
                    android:text="Log Out"
                    android:textColor="@color/blue"
                    android:textSize="20dp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</RelativeLayout>